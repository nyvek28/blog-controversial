<%=form_for(@article) do |f|%>
	<%@article.errors.full_messages.each do |messages|%>
		<div class = 'be-red white'>
			* <%= messages%>
		</div>
	<%end%>
	<div class = 'field'>
		<%= f.text_field :title, placeholder: 'Tilte', class: 'form-control article-title'%>
	</div>
	<div class = 'field'>
		<%= f.text_area :body, placeholder: 'Your article goes here!', style: 'height:250px;', class: 'form-control article-body'%>
	</div>
	<div class = 'field'>
		<%= f.submit 'Save', class: 'be-red btn white position-right'%>
	</div>
<%end%>